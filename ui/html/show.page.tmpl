{{ template "base" . }}
{{ define "title" }}Snippet #{{ .Snippet.ID }}{{ end }}
{{ define "main" }}
<div class='snippet'>
    <div class='metadata'><strong>{{ .Snippet.Title }}</strong> <span>#{{ .Snippet.ID }}</span>
    </div>
    <pre><code>{{ .Snippet.Content }}</code></pre>
    <div class='metadata'>
        <time>Created: {{ .Snippet.Created.Format "Jan _2, 2006, 15:04" }}</time>
        <time>Expires: {{ .Snippet.Expires.Format "Jan _2, 2006, 15:04" }}</time>
    </div>
</div>
{{ end }}